# CS Test Automation Framework - Development Environment Configuration
# This file contains settings specific to the DEV environment
# These settings override values in global.env

# ==================== ENVIRONMENT INFO ====================
ENVIRONMENT_NAME=sit
ENVIRONMENT_DISPLAY_NAME=System Integration Testing
ENVIRONMENT_DESCRIPTION=SIT environment for akhan
ENVIRONMENT_CODE=sit
ENVIRONMENT_TYPE=testing
ENVIRONMENT_TIER=2

# ==================== APPLICATION URLs ====================
APP_BASE_URL=https://opensource-demo.orangehrmlive.com/web/index.php/auth/login
ENVIRONMENT=sit
PROJECT=akhan

# ==================== SECURITY CONFIGURATION ====================
# SSL/TLS
SSL_KEY_PATH=./certs/dev/key.pem
SSL_VERIFY=false
CERTIFICATE_VALIDATION=false1
DEBUG_MODE=true

# ADO Integration (disabled for development)
ADO_INTEGRATION_ENABLED=false

# Browser Configuration
BROWSER=chromium
HEADLESS=false
BROWSER_MAXIMIZED=true
TIMEOUT=30000
STEP_TIMEOUT=60000
DEFAULT_TIMEOUT=60000
NAVIGATION_TIMEOUT=60000
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Test Configuration
RETRY_COUNT=2
PARALLEL_EXECUTION=false
WORKERS=1

# Reporting Configuration
REPORT_ENABLED=true
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Logging Configuration
LOG_LEVEL=debug
FILE_LOG_ENABLED=true
CONSOLE_LOG_ENABLED=true
