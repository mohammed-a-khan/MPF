# SauceDemo Project - QA Environment Configuration

# Environment Information
ENVIRONMENT_NAME=qa
ENVIRONMENT_DISPLAY_NAME=Quality Assurance
ENVIRONMENT_DESCRIPTION=QA testing environment for SauceDemo

# Application URLs
APP_BASE_URL=https://qa.saucedemo.com
API_BASE_URL=https://qa-api.saucedemo.com/api

# Database Configuration
DATABASE_ENABLED=true
DATABASE_HOST=qa-db.saucedemo.com
DATABASE_PORT=5432
DATABASE_NAME=saucedemo_qa
DATABASE_USERNAME=qa_user
DATABASE_PASSWORD=qa_secure_pass
DATABASE_SSL_ENABLED=true

# Browser Configuration
BROWSER_TYPE=chromium
BROWSER_HEADLESS=true
BROWSER_SLOWMO=500
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Test Configuration
PARALLEL_EXECUTION=true
MAX_WORKERS=4
RETRY_COUNT=2
TIMEOUT=30000

# Reporting Configuration
REPORT_ENABLED=true
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=true
TRACE_RECORDING=true

# ADO Integration
ADO_INTEGRATION_ENABLED=true
ADO_ORGANIZATION=company-qa
ADO_PROJECT=SauceDemo-QA
ADO_PLAN_ID=12345

# Security Configuration
SSL_VERIFY=true
CERTIFICATE_VALIDATION=true
SECURE_COOKIES=true

# Logging Configuration
LOG_LEVEL=info
FILE_LOG_ENABLED=true
CONSOLE_LOG_ENABLED=true