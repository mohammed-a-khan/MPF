# SauceDemo Project Configuration
# Project-specific settings for SauceDemo UI testing

# Project Information
PROJECT_NAME=SauceDemo UI Testing Suite
PROJECT_CODE=saucedemo
PROJECT_VERSION=1.0.0

# UI Testing Specific Settings
UI_ENABLED=true
BROWSER_REQUIRED=true
UI_TIMEOUT=30000
UI_RETRY_COUNT=1

# SauceDemo Specific Settings
SAUCEDEMO_BASE_URL=https://www.saucedemo.com
SAUCEDEMO_USERS=standard_user,locked_out_user,problem_user,performance_glitch_user

# Step Definition Paths
STEP_DEFINITION_PATHS=src/steps/ui/**/*.ts,test/saucedemo/steps/**/*.ts,test/steps/**/*.ts

# UI Test Data
UI_TEST_DATA_PATH=test/saucedemo/data
SCREENSHOT_COMPARISON=true

# Browser Configuration
BROWSER_HEADLESS=false
BROWSER_SLOWMO=0
BROWSER_DEVTOOLS=false

# Evidence Collection
VIDEO_RECORDING=true
TRACE_RECORDING=true
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_ON_SUCCESS=false

# Feature Paths
FEATURE_PATHS=test/saucedemo/features/**/*.feature

# Database (disabled for SauceDemo project)
DATABASE_ENABLED=false

# API Testing (disabled for SauceDemo project)
API_ENABLED=false

# ADO Integration (can be enabled per environment)
ADO_INTEGRATION_ENABLED=true
ADO_PROJECT_NAME=SauceDemo Testing 