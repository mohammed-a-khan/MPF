# Common Framework Configuration
# These settings apply to all projects unless overridden

# Framework Core Settings
FRAMEWORK_NAME=CS Test Automation Framework
FRAMEWORK_VERSION=1.0.0
FRAMEWORK_MODE=production

# Default Timeouts (can be overridden by project-specific configs)
DEFAULT_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=60000
ELEMENT_TIMEOUT=10000

# Logging Configuration
LOG_LEVEL=info
CONSOLE_LOG_ENABLED=true
FILE_LOG_ENABLED=true
LOG_RETENTION_DAYS=30
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Browser Configuration
DEFAULT_BROWSER=chromium
HEADLESS=false
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Retry Configuration
DEFAULT_RETRY_COUNT=0
MAX_RETRY_COUNT=3

# Report Configuration
REPORT_ENABLED=true
REPORT_FORMAT=html
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=false
TRACE_RECORDING=false

# Network Configuration
REQUEST_TIMEOUT=30000
MAX_REDIRECTS=10

# Test Data Configuration
TEST_DATA_ENCRYPTION=false
TEST_DATA_CACHE_ENABLED=true

# Common Step Definition Paths
COMMON_STEP_PATHS=src/steps/**/*.ts,test/steps/**/*.ts 

# Performance Optimization
USE_OPTIMIZED_STEP_LOADER=true
STEP_DEFINITION_CACHE_ENABLED=true
STEP_DEFINITION_CACHE_TTL=86400000