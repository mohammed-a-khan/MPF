{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üîç Debug CS Framework - Main Entry",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "args": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "true",
                "BROWSER_DEBUG": "true"
            },
            "runtimeArgs": [
                "--require", "ts-node/register",
                "--inspect-brk=9229"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "outputCapture": "console"
        },
